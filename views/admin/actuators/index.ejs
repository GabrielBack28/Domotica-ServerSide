<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin</title>
  <%- include('../../components/imports'); -%>
</head>
<body>
  <%- include('../../components/navbar'); -%>

  <div>
    <div>
      <h1>Administração de Ativadores</h1>
    </div>

    <div>
      <a href="/admin/actuators/create">Novo</a>
    </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>Código</th>
						<th>Nome</th>
						<th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% actuators.forEach((actuator) => { %>
            <tr>
              <td><%= actuator.id %></td>
							<td><%= actuator.name %></td>
							<!-- <td><%= actuator.status ? "Ligado" : "Desligado" %></td> -->
							<td>
                <form action="/admin/actuators/<%= actuator.id %>" method="POST">
                  <button type="submit">
                    <%= actuator.status ? 'Ligado' : 'Desligado' %>
                  </button>
                </form>
              </td>
            </tr>
          <% }); %>
          
        </tbody>
      </table>
    </div>
  </div>
  
</body>
</html>