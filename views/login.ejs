<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <%- include('./components/imports.ejs'); -%>
</head>

<body>
  <div class="mdl-grid" style="margin-left: 40%; width: 20%; margin-top: 10rem">
    <form method="POST" action="login">
      <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">LOGIN</h2>
        </div>
        <% if (msg) { %>
        <div role="alert" style="margin-left: 10px">
          <%= msg %>
        </div>
        <% } %>
        <div class="mdl-card__supporting-text">

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" name="email" type="email" id="inputEmail">
            <label class="mdl-textfield__label" for="inputEmail">Email</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" name="password" type="password" id="inputPassword">
            <label class="mdl-textfield__label" for="inputPassword">Senha</label>
          </div>

        </div>
        <div class="mdl-card__actions mdl-card--border">
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Entrar</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>